<div class="container mx-auto py-8">
  <h1 class="text-2xl font-bold text-center mb-6"><%= t('images.index.title') %></h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @images.each do |image| %>
      <div class="bg-gray-200 rounded-lg shadow-[0px_4px_20px_4px_rgba(0,0,0,0.3)] hover:shadow-[0px_6px_30px_6px_rgba(0,0,0,0.5)] overflow-hidden transform transition-all duration-300 ease-in-out hover:scale-105 hover:z-10 relative">
        <% if image.file.attached? %>
          <%= image_tag(image.file.url, class: "w-full h-48 object-cover") %>
        <% else %>
          <p><%= t('images.index.no_image') %></p>
        <% end %>
        <div class="p-4">
          <h2 class="text-lg font-semibold mb-2"><%= image.title %></h2>
          <%= link_to t('images.index.view_more'), image_path(image), class: "block text-center bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
