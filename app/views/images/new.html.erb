<div class="container mx-auto py-8">
  <h1 class="text-2xl font-bold text-center mb-6"><%= t('images.new.title') %></h1>
  <%= form_with model: @image, local: true, class: "max-w-lg mx-auto bg-white p-6 rounded-lg shadow-lg" do |f| %>
    <% if @image.errors.any? %>
      <div class="bg-red-100 text-red-800 p-4 mb-4 rounded-lg">
        <h2 class="text-lg font-bold"><%= t('images.new.errors') %></h2>
        <ul class="list-disc pl-6">
          <% @image.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :title, t('images.new.title_label'), class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_field :title, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :description, t('images.new.description_label'), class: "block text-gray-700 font-bold mb-2" %>
      <%= f.text_area :description, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :file, t('images.new.file_label'), class: "block text-gray-700 font-bold mb-2" %>
      <%= f.file_field :file, class: "w-full" %>
    </div>

    <div class="text-center">
      <%= f.submit t('images.new.submit'), class: "bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>
