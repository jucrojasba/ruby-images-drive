<div class="container mx-auto py-8">
  <div class="max-w-lg mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
    <%= @image.file.attached? ? image_tag(@image.file, class: "w-full h-auto object-cover") : t('images.show.no_image') %>
    <div class="p-6">
      <h1 class="text-2xl font-bold mb-4"><%= @image.title %></h1>
      <p class="text-gray-700 mb-6"><%= @image.description %></p>
      <%= link_to t('images.show.back'), images_path, class: "block text-center bg-gray-500 text-white font-bold py-2 px-4 rounded hover:bg-gray-600" %>
    </div>
  </div>
</div>
